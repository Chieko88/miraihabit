<div class="container" data-controller="progress-bar">
  <h1>Dashboard</h1>
  <div class="card-dashboard" >
    <h2 class="score-text">Your Score</h2>
    <div class="card-dashboard-score">
      <h1 class="score-number" data-progress-bar-target="score"><%= @user.total_score %></h1>
    </div>
  </div>
  <div class="card-dashboard">
    <div class="d-flex p-3 justify-content-between">
      <h2>Your Progress</h2>
      <h2>Goal score: 1000</h2>
    </div>
    <div class="stepper-wrapper">
      <div class="stepper-item" data-progress-bar-target="stepper" data-score="100">
        <div class="step-counter">1</div>
        <div class="step-name">100</div>
      </div>
      <div class="stepper-item" data-progress-bar-target="stepper" data-score="200">
        <div class="step-counter">2</div>
        <div class="step-name">200</div>
      </div>
      <div class="stepper-item" data-progress-bar-target="stepper" data-score="300">
        <div class="step-counter">3</div>
        <div class="step-name">300</div>
      </div>
      <div class="stepper-item" data-progress-bar-target="stepper" data-score="400">
        <div class="step-counter">4</div>
        <div class="step-name">400</div>
      </div>
      <div class="stepper-item" data-progress-bar-target="stepper" data-score="600">
        <div class="step-counter">5</div>
        <div class="step-name">600</div>
      </div>
      <div class="stepper-item" data-progress-bar-target="stepper" data-score="800">
        <div class="step-counter">6</div>
        <div class="step-name">800</div>
      </div>
      <div class="stepper-item" data-progress-bar-target="stepper" data-score="1000">
        <div class="step-counter">7</div>
        <div class="step-name">1000</div>
      </div>
    </div>
  </div>
  <hr>
  <% @user.challenges.each do |challenge| %>
    <%= render 'challenges/card', challenge: challenge %>
  <% end %>
</div>
