<div class="challenge-card-small justify-content-between">
  <%= image_tag "#{challenge.category}.png"%>
  <div class="row justify-content-between">
    <%# <div class ="col-4 d-flex flex-column"> %>
    <%# <div class="challenge-card-small-infos" style="justify-content-between text-align: center"> %>
    <%# </div> %>
    <%# </div> %>
    <div class ="col-8 width-250">
      <h3><%= challenge.name %></h3>
      <% if challenge.difficulty == 1 %>
        <h4>Environmental Impact: <i class="fa-solid fa-star"></i><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i></h4>
      <% elsif challenge.difficulty == 2 %>
        <h4>Environmental Impact: <i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-regular fa-star"></i></h4>
      <% elsif challenge.difficulty == 3 %>
        <h4>Environmental Impact: <i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i></h4>
      <% end %>
      <h5><%= challenge.max_score / 7%>  <i class="fa-solid fa-leaf"></i></h5>
    </div>
  </div>
  <div class="me-3">
    <%#= link_to dashboard_path do %>
      <%# <i class="fa-solid fa-plus fs-4"></i>  Add to your dashboard %>
      <%# end %>
      <%= link_to challenge_path(challenge), class: "btn btn-danger challenge-card-show-detail-text w-100 mb-2 px-5 text-white" do %>
        <i class="fa-solid fa-info"></i><b>  Info</b>
      <% end %>
      <%# unless current_user.challenges.include?(challenge) %>
    </div>
  </div>
