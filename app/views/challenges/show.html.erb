<div class="container">
  <div class="challenge-show-backbtn">
      <%= link_to '<< Back', challenges_path, class: "btn btn-outline-info mt-2 text-decoration-none" %>
  </div>
  <div class="challenge-card-show">
    <% unless current_user.challenges.include?(@challenge) %>
      <%= render "user_challenges/user_challenge_create_form", challenge: @challenge, user_challenge: @user_challenge %>
    <% end %>
    <h1 class="m-3">
      <b><%= @challenge.name %></b>
    </h1 class="m-3">
    <div class="m-4">
      <% if @challenge.difficulty == 1 %>
        <h4><b>Environmental Impact: </b><i class="fa-solid fa-star"></i><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i></h4>
      <% elsif @challenge.difficulty == 2 %>
        <h4><b>Environmental Impact: </b><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-regular fa-star"></i></h4>
      <% elsif @challenge.difficulty == 3 %>
        <h4><b>Environmental Impact: </b><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i></h4>
      <% end %>
      <div class="d-flex m-4 justify-content-center">
        <% if  @challenge.duration == 1%>
          <h4><b>Duration: </b></h4>
          <h4><%= @challenge.duration %> day</h4>
        <% else %>
          <h4><b>Duration:  </b></h4>
          <h4><%= @challenge.duration %> days</h4>
        <% end %>
      </div>
      <h4><%= @challenge.max_score / 7%> <i class="fa-solid fa-leaf"></i></h4>
    </div>
    <div class="d-flex justify-content-between align-items-center">
      <div class="m-3" >
        <div class="mt-3">
          <h3><b>Did you know?</b></h3>
          <p  class="mt-3"><%= @challenge.description_what %></p>
        </div>
        <div class="mt-3">
          <h3><b>What you can do</b></h3>
          <p  class="mt-3"><%= @challenge.description_why %></p>
        </div>
      </div>
      <div class="m-3">
        <%= cl_image_tag @challenge.photo.key, height: 300, width: 400, style: "border-radius: 50%;" %>
      </div>
    </div>
  </div>
</div>
