<div class="container-fluid">
  <div class="test-card">
    <div class="test-card-content">
      <h2>Pick your choice!</h2>
      <%= @question.content  %>
      <div class="answers-wrapper">
          <% @question.answers.each do |answer|  %>
            <div class="answer">
              <%= link_to "", class: "btn btn-ghost" do %>
                <%= answer.content %>
              <% end %>
            </div>
          <% end %>
      </div>
      </div>
      <div class="footer">
      <% if @question != Question.first %>
        <%= link_to "#", class: "btn btn-ghost" do %>
          <i class="fa-solid fa-circle-arrow-left"></i> Back
        <% end %>
      <% end %>
      <% if @question != Question.last %>
        <%= link_to "#", class: "btn btn-ghost" do %>
          Next <i class="fa-solid fa-circle-arrow-right"></i>
        <% end %>
      <% else %>
        <%= link_to "#", class: "btn btn-ghost" do %>
          Sumbit all <i class="fa-solid fa-circle-arrow-right"></i>
        <% end %>
      <% end %>
      </div>
  </div>
</div>
